SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# Run every day at 06:00 (previous day)
0 6 * * * python3 /app/currency_exchange_rate.py MDL EUR $(date -d "yesterday" +\%Y-\%m-\%d) --key $API_KEY --url http://web:80 >> /var/log/cron.log 2>&1

# Run every Friday at 17:00 (previous week)
0 17 * * 5 python3 /app/currency_exchange_rate.py MDL USD $(date -d "7 days ago" +\%Y-\%m-\%d) --key $API_KEY --url http://web:80 >> /var/log/cron.log 2>&1
